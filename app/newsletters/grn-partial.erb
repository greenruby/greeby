<div id="templateContainer">
<div id="templateHeader">
<img src="http://codegreenit.com/images/green-ruby-68.png" id="headerImage">
<div>
<h1>Green Ruby News #<%= @c.edition %></h1>
<div><%= @c.pubdate %></div>
</div>
</div>
<div id="templateBody">
<div>
	<div class="baseline">
	<h3>Edito</h3>
	<%= @c.edito %>
<br>
<br>
<em>&nbsp; mose - the green ruby editor</em><br>
<em>&nbsp; xenor - the informer</em><br>
&nbsp; <a href="http://greenruby.org" target="_self">http://greenruby.org</a>
<br>
</div>

<% @c.topics.each do |t| %>
<h2><%= t.title %></h2>
<div class="baseline"><%= t.baseline %></div>
<table cellpadding="0" cellspacing="0" border="0" class="meat">
	<% t.links.each do |l| %>
		<tr>
			<td>
				<a href="<%= l.url %>"><%= l.title %></a>
				<% if l.duration %><span class="duration">(<%= l.duration %>)</span><% end %>
			</td>
			<td class="date">
				<%= l.pubdate %>
				<% if l.tags %>
					<% l.tags.each do |tag| %>
						<img class="icon" src="http://greenruby.org/ico/<%= tag %>.png" height"18" width="18" align="right" alt="<%= tag %>" />
					<% end %>
				<% end %>
			</td>
		</tr>
		<tr>
			<td colspan="2" class="comment">
				<%= l.comment %>
			</td>
		</tr>
	<% end %>
</table>
<% end %>
